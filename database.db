-- Create tables

CREATE TABLE IF NOT EXISTS student (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    usn TEXT,
    name TEXT,
    email TEXT UNIQUE,
    phone TEXT,
    password TEXT,
    role TEXT
);

CREATE TABLE IF NOT EXISTS admin (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    email TEXT UNIQUE,
    phone TEXT,
    password TEXT,
    role TEXT
);

CREATE TABLE IF NOT EXISTS attendance (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    email TEXT,
    date TEXT,
    status TEXT
);

CREATE TABLE IF NOT EXISTS guest_invite (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    student_email TEXT,
    guest_name TEXT,
    visit_date TEXT,
    invite_code TEXT UNIQUE
);

